<% if(success.length){ %>
<div
  class="toast align-items-center show mb-3 position-fixed top-0 start-50 text-bg-success flash-msg"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
  style="z-index: 1000"
>
  <div class="d-flex">
    <div class="toast-body"><%= success %></div>
    <button
      type="button"
      class="btn-close me-2 m-auto"
      data-bs-dismiss="toast"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %> <% if(error.length){ %>
<div
  class="toast align-items-center show mb-3 position-fixed top-0 start-50 text-bg-danger flash-msg"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
  style="z-index: 1000"
>
  <div class="d-flex">
    <div class="toast-body"><%= error %></div>
    <button
      type="button"
      class="btn-close me-2 m-auto"
      data-bs-dismiss="toast"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %>
